<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    x:Class="MediTrack.Controller.RemoteController.SelectionWindowPatientBox"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <DataTemplate x:Key="SelectionWindowPatientBox">

        <Button   Content="FirstName + SurName" Width="100" Height="45" Margin="5"
            Background="Gray" BorderBrush="ForestGreen" BorderThickness="1" Opacity="1"
            Click="OnToggleButtonClicked">


            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </DataTemplate>
    
</ResourceDictionary>