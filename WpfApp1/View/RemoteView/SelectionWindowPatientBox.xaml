<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    x:Class="MediTrack.Controller.RemoteController.SelectionWindowPatientBox"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <DataTemplate x:Key="SelectionWindowPatientBox">

        <Button    Width="100" Height="45" Margin="5"
            Background="Gray" BorderBrush="ForestGreen" BorderThickness="1" 
            Opacity="1" Click="OnToggleButtonClicked"
               Content="{Binding varI, Mode=OneWay}"  >


            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border  CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </DataTemplate>
    
</ResourceDictionary>