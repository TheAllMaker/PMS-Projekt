                            <Rectangle.Resources>
                                <SolidColorBrush x:Key="canvas" Opacity="0" />
                                <SolidColorBrush x:Key="light-defaultgrey-10" Color="LightGray" Opacity="0.1" />
                                <SolidColorBrush x:Key="light-defaultgrey" Color="LightGray" Opacity="1" />
