<Window x:Class="Vitaldatensimulator.MainCreatePatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Vitaldatensimulator"
        Title="Vitaldaten-Monitor" Height="400" Width="568"
        Background="Black">



    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="450"/>
        </Grid.ColumnDefinitions>

        <!-- Labels für Text über den Slidern -->

        <!-- Eingabefelder und Slider -->

        <StackPanel Margin="1,0,10,0" Grid.Column="1" Grid.RowSpan="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5" Width="262">
                <TextBlock Text="Monitor ID" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0" Width="60"/>
                <TextBox x:Name="MonitorIDBox"  Width="31"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,5">
                <TextBlock Text="Herzrate" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="HeartRateBox" Width="50" Margin="0,0,5,0"/>
                <Slider x:Name="HeartRateSlider" Width="200" HorizontalAlignment="Left" Minimum="50" Maximum="120" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,5">
                <TextBlock Text="Respiration Rate" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="RespirationRateBox" Width="50" Margin="0,0,5,0"/>
                <Slider x:Name="RespirationRateSlider" Width="200" HorizontalAlignment="Left" Minimum="10" Maximum="25" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,5">
                <TextBlock Text="Oxygen Level" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="OxygenLevelBox" Width="50" Margin="0,0,5,0"/>
                <Slider x:Name="OxygenLevelSlider" Width="200" HorizontalAlignment="Left" Minimum="90" Maximum="100" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,5">
                <TextBlock Text="Systolic Blood Pressure" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="SystolicBloodPressureBox" Width="50" Margin="0,0,5,0"/>
                <Slider x:Name="BloodPressureSystolicSlider" Width="200" HorizontalAlignment="Left" Minimum="90" Maximum="120" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,5">
                <TextBlock Text="Diastolic Blood Pressure" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="DiastolicBloodPressureBox" Width="50" Margin="0,0,5,0"/>
                <Slider x:Name="BloodPressureDiastolicSlider" Width="200" HorizontalAlignment="Left" Minimum="60" Maximum="80" Margin="5,0"/>
            </StackPanel>
        </StackPanel>
        <TextBlock HorizontalAlignment="Center" Margin="0,-74,0,0" TextWrapping="Wrap" Text="Vitaldaten Simulator" Foreground="White" VerticalAlignment="Top" Grid.Column="1" Height="16" Width="108"/>
        <Button Content="Bestätigen" Grid.ColumnSpan="2" Margin="342,133,26,-103" RenderTransformOrigin="0.5,0.5" Click="Button_Click_Confirm " Background="#FF16FF06" Grid.Row="1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.096"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Content="Abbrechen" Grid.ColumnSpan="2" Margin="425,133,-50,-103" RenderTransformOrigin="0.5,0.5" Click="Button_Click_Cancel" Background="Red" Grid.Row="1">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.096"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
